
@{
    ViewBag.Title = "ListaEditorial";
    Layout = "~/Views/Shared/AdminView.cshtml";
}

<head>
    <title>Editoriales</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="Shortcut Icon" type="image/x-icon" href="assets/icons/book.ico" />
    <script src="js/sweet-alert.min.js"></script>
</head>

<script src="~/Scripts/js_libros.js"></script>
<script>
    var UrlBorrarEdit = '@Url.Action("eliminarEdit", "Admin")'
</script>
<div class="container-fluid">
    <h2 class="text-center all-tittles" style="clear: both; margin: 25px 0;">Paises</h2>
    <a href="~/admin/RegistroEditorial" class="btn btn-outline-dark user-select-auto" data-placement="top">Agregar editoriales</a>
    <br>
    <br>
    <div class="div-table" style="margin:0 !important;">
        <div class="div-table-row div-table-header" style="background-color:#DFF0D8; font-weight:bold;">
            <div class="div-table-cell">Editorial</div>
            <div class="div-table-cell">Actualizar</div>
            <div class="div-table-cell">Eliminar</div>
        </div>

        @foreach (var item in Model)
        {
            if (item.Activos == 1)
            {
                <div class="div-table-row div-table-row-list" id="fila-item.@item.idEditorial">
                    <div class="div-table-cell">@item.nombreEditorial</div>
                    <div class="div-table-cell">
                        <a href="~/admin/RegistroEditorial?idEdit=@item.idEditorial" class="btn btn-success">Editar</a>
                    </div>
                    <div class="div-table-cell">
                        <a href="javascript:eliminarEdit(@item.idEditorial)" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>                   
            }
        }
    </div>
</div>

