
@{
    ViewBag.Title = "VistaUsuario";
    Layout = "~/Views/Shared/ClientView.cshtml";
}


<style>
    #ModificarUsuario {
        display: none;
    }
</style>
<head>
    <link rel="stylesheet" href="../Content/Client/css/usuarios.css">
</head>
<script src="~/Scripts/js_clientes.js"></script>
<script>
        var UrlBorrarClint = '@Url.Action("eliminarClint", "Cliente")'
</script>
<script>
        var UrlGuardarClint = '@Url.Action("guardarClint","Cliente")'
</script>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="~/cliente/Books">BookHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="~/cliente/Books">Inicio</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Libros
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="~/cliente/Categories">Categorias</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="#!">Mas vistos</a></li>
                            <li><a class="dropdown-item" href="#!">Nuevas adquisiciones</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex">
                    <a class="btn btn-outline-dark" href="~/cliente/car">
                        <i class="bi-cart-fill me-1"></i>
                        Carrito
                        <span class="badge bg-dark text-white ms-1 rounded-pill">@Convert.ToInt16(ViewBag.Items)</span>
                    </a>
                    <a>&ensp;</a>
                </form>
                <ul class="navbar-nav d-flex">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Mi perfil
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="~/cliente/VistaUsuario">Ver perfil</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="#!">Eliminar cuenta</a></li>
                            <li><a class="dropdown-item" href="~/home/login">Cerrar sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <header class="bg-dark py-5" style="height: 200px">
        <div class="">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Perfil de usuario</h1>
                <p class="lead fw-normal text-white-50 mb-0"></p>
            </div>
        </div>
    </header>


    <div class="container">
        <div class="main-body">
            <br><br>
            <!-- /Breadcrumb -->
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>
                                        @ViewBag.Cliente.nombresCliente @ViewBag.Cliente.apellidoPCliente @ViewBag.Cliente.apellidoMCliente
                                    </h4>
                                    <p class="text-secondary mb-1"></p>
                                    <p class="text-muted font-size-sm"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body" id="PerfilUsuario">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nombre completo</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ViewBag.Cliente.nombresCliente @ViewBag.Cliente.apellidoPCliente @ViewBag.Cliente.apellidoMCliente
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Usuario</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ViewBag.Cliente.usuarioCliente
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Teléfono</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ViewBag.Cliente.telefonoCliente
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Dirección</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ViewBag.Cliente.direccionCliente
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Fecha de nacimiento</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ViewBag.Cliente.fechaNacimientoCliente.ToString("yyyy-MM-dd")
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a class="btn btn-info" href="javascript:editar()">Editar</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body" id="ModificarUsuario">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nombre</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" id="nombreClint" value="@ViewBag.Cliente.nombresCliente">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Apellido paterno</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" id="apePClint" value="@ViewBag.Cliente.apellidoPCliente">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Apellido materno</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" id="apeMClint" value="@ViewBag.Cliente.apellidoMCliente">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Fecha de nacimiento</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="date" class="form-control" id="fechaClint" value="@ViewBag.Cliente.fechaNacimientoCliente.ToString("yyyy-MM-dd")">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Dirección</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" id="dirClint" value="@ViewBag.Cliente.direccionCliente">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Telefono</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" id="telClint" value="@ViewBag.Cliente.telefonoCliente">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Usuario</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" id="userClint" value="@ViewBag.Cliente.usuarioCliente">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Contraseña</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" id="passClint" value="@ViewBag.passClint">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <a href="javascript:guardarClint(@ViewBag.Cliente.idCliente)" class="btn btn-primary px-4">Guardar cambios</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


